<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="8dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imageThumbnail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:contentDescription="Thumbnail"
            android:backgroundTint="@color/white"
            android:background="@drawable/image_placeholder_bg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Father Aadhar"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category: ID"
                android:textSize="14sp"
                android:textColor="#BBFFFFFF" />

            <TextView
                android:id="@+id/textIdNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID No: XXXX-XXXX-XXXX"
                android:textSize="14sp"
                android:textColor="#BBFFFFFF" />

            <TextView
                android:id="@+id/textExpiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expires: 12/12/2030"
                android:textSize="14sp"
                android:textColor="#BBFFFFFF" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnOptions"
            android:layout_gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_vert_24"
            android:contentDescription="Options"
            app:tint="@color/white" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
